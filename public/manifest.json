{
    "name": "Kurozora",
    "short_name": "Kurozora",
    "description": "Your one-stop shop for everything anime!",
    "categories": ["entertainment", "productivity", "lifestyle"],
    "dir": "auto",
    "lang": "en",
    "scope": "/",
    "id": "?pwa=1",
    "start_url": "/",
    "scope_extensions": [
        {"origin": "*.kurozora.app"},
        {"origin": "kurozora.com"},
        {"origin": "*.kurozora.com"}
    ],
    "display": "standalone",
    "display_override": ["window-controls-overlay"],
    "background_color": "#353A50",
    "theme_color": "#FF9300",
    "orientation": "any",
    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },
    "handle_links": "auto",
    "edge_side_panel": {},
    "screenshots": [
        {
            "src": "images/static/screenshots/desktop/1.webp",
            "sizes": "1280x800",
